<% unless current_user == @post.user %>
  <% if current_user.likes_post?(@post) %>
    <%= form_with(model: current_user.likes.find_by(post_id: @post.id), local: true, method: :delete) do |f| %>
      <%= f.hidden_field_tag :@post_id, @post.id %>
      <%= f.submit 'いいね解除', class: 'btn btn-secondary btn-md' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.likes.build, local: true) do |f| %>
      <%= f.hidden_field_tag :@post_id, @post.id %>
      <%= f.submit 'いいね!', class: 'btn btn-secondary btn-md' %>
    <% end %>
  <% end %>
<% end %>  
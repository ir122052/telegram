<ul class="list-styled">
  <% posts.each do |post| %>
   <li class="media">
     <img src="<%= gravatar_url(post.user, { size: 50 }) %>" class="mr-3" alt="...">
     <div class="media-body">
       <div>
          <%= link_to post.user.name, user_path(post.user) %><span class="text-muted">posted at <%= post.created_at %></span>
       </div>
       <div>
          <p>
              <%= image_tag post.image.url if post.image? %>
          </p>
       </div>
       <div>
           <p><%= link_to post.content, post_path(post) %></p>
       </div>
       <div class="mb-5">
           <a href="<%= post_path(post) %>" class="badge badge-secondary" >いいね数<%= post.likes.count %></a>
       </div>
     </div>
   </li>
  <% end %>
  <%= paginate posts %>
</ul>  